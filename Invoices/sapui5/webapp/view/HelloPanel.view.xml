<mvc:View
    controllerName="coa.sapui5.controller.HelloPanel"
    xmlns="sap.m"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:core="sap.ui.core"
    displayBlock="true">
 <Panel headerText="{i18n>helloPanel}" class="sapUiResponsiveMargin" width="100%">
                            <content>
                                   <Button id="hello" icon="sap-icon://action" text="{i18n>helloDialogBut}" press=".onOpenDialog" class="sapUiSmallMarginEnd"/>
                                   <Button text="{i18n>showHelloButtonText}" press=".onShowHello" class="sapUiSmallMarginEnd"/>
                                   <Input
                                          value="{/recipient/name}"
                                          valueLiveUpdate="true"
                                          width="60%"
                                   />
                                   <Text text="{/recipient/name}" class="sapUiSmallMargin boldElement sapthemeHighlight-asColor"/>
                            </content>
</Panel>
<core:Fragment fragmentName="coa.sapui5.view.Form01" type="XML"/>

</mvc:View>